doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title CoffeeMovie
        link(rel="stylesheet", href="/style.css")
        
    body

        header 
            h1  CoffeeMovie
            a(href="/menu")
                input(type="button" id="menu_hamburguesa" value="Menu")

        main  
            h3 Hello, admin 
            
            h5 If something is missing: 
            a(href='/admin/createMovieForm') 
                button(type='button') Add a Movie
            
            h5 If you want to change any detail:
            a(href="/admin/updateMovie/:title")
                button(type='button') Update this movie

            form(action="/admin/search/" method="post" id="search-form")      
                        label(for="title") Search for a movie:
                        input(type="text" id="search-bar" name="title" placeholder="Your movie here..." required)
                        button(type="submit") Search
             
            h1 Here are your films:
            for movie of movieDetails
                article(class="search-list-card")
                    button(class="detail-btn")
                        h2 #{movie.title}
                        img(src=`${movie.poster_path}` alt=`Poster for ${movie.title}`)
                        h3 Release date: #{movie.release_date}
                        h3(hidden) #{movie._id} 
                        h3 Director: #{movie.director}
                        h3 Genre: #{movie.genre}
                        h3 Runtime: #{movie.runtime}
        script(src='/scripts/admin-film-list.js')