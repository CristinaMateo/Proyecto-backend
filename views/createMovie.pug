doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 

        header
            h1  CoffeeMovie
            input(type="button" id="menu_hamburguesa" value="Menu")
        main

            h3 Add a new movie to our database!
                p If you think a movie is missing or the information given is not correct, add your own movie.

            form(action="/admin/createMovie" method="post")

                fieldset

                    label(for="title") Title:
                    input(type="text" name="title" class="create" required)
                    label(for="release_date") Release date:
                    input(type="date" name="release_date" class="create" placeholder="YYYY-MM-DD" required)
                    label(for="director") Director:
                    input(type="text" name="director" class="create" required)
                    label(for="genre") Genre:
                    input(type="text" name="genre" class="create" required)
                    label(for="poster_path") Poster image, insert url:
                    input(type="text" name="poster_path" class="create" placeholder="url" required)
                    label(for="runtime") Runtime:
                    input(type="text" name="runtime" class="create" required)
                    label(for="overview") Overview:
                    input(type="text" name="overview" class="create" required)
                    label(for="cast") Cast:
                    input(type="text" name="cast" class="create" required)
                    label(for="vote_average") Average Rating:
                    input(type="number" step="0.1" name="vote_average" class="create" placeholder="example: 6.7" required)
                
                    input(type="submit" value="Create" id="create")
           
     footer 
        img(src="assets/logoApi.png", alt="logo Api")



    
   
